---
const { orientation } = Astro.props as SideColumnProps;
---

<div
    class={`z-[1] animate-fade-in-up hidden md:block fixed bottom-0 ${
        orientation === "left" ? "left-12" : "right-12"
    }`}
>
    <div class="vertical-line relative flex flex-col gap-6">
        <slot />
    </div>
</div>

<style>
    .vertical-line::after {
        @apply mx-auto mt-1 h-24 w-[1px] bg-primary content-[""];
    }
</style>
