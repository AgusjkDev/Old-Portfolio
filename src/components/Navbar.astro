---
import ResumeButton from "./ResumeButton.astro";
import { navbarAnchors } from "data";
---

<nav
    class="flex flex-col items-center gap-10 md:flex-row md:justify-center md:gap-10 lg:gap-12 xl:gap-20 2xl:gap-24"
>
    {
        navbarAnchors.map(({ href, children }, i) => (
            <a
                href={href}
                class="menu-anchor font-sfmono flex flex-col text-center text-lg font-medium text-neutral-300 transition-colors duration-300 hover:text-sky-400 md:flex-row md:items-center md:gap-1 md:text-xs"
            >
                <span class="text-sm text-sky-400 md:text-xs">0{i + 1}.</span>
                {children}
            </a>
        ))
    }

    <!-- Only visible for larger devices -->
    <div class="hidden md:block">
        <ResumeButton />
    </div>
</nav>
