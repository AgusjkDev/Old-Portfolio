---
import Section from "./Section.astro";
import { projects } from "data";
---

<Section id="projects" title="Proyectos" number="03">
    <article class="grid gap-12 lg:grid-cols-2 2xl:grid-cols-3">
        {
            projects.map(({ title, url, repository, description, technologies }) => (
                <div class="flex max-w-sm flex-col justify-between rounded-sm bg-slate-700 p-7 sm:aspect-square">
                    <div class="flex flex-col gap-4">
                        <div class="flex justify-between">
                            <h3 class="font-calibre text-2xl font-semibold text-slate-300">
                                {title}
                            </h3>

                            <div class="flex gap-2 [&_svg]:w-6 [&_svg]:fill-slate-300">
                                <a
                                    aria-label={`Enlace a ${title}`}
                                    href={url}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="hover:[&>svg]:fill-sky-400"
                                >
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        viewBox="0 0 24 24"
                                        class="transition-colors duration-300"
                                    >
                                        <path d="m13 3 3.293 3.293-7 7 1.414 1.414 7-7L21 11V3z" />
                                        <path d="M19 19H5V5h7l-2-2H5c-1.103 0-2 .897-2 2v14c0 1.103.897 2 2 2h14c1.103 0 2-.897 2-2v-5l-2-2v7z" />
                                    </svg>
                                </a>

                                <a
                                    aria-label={`Enlace al repositorio de ${title}`}
                                    href={repository}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="hover:[&>svg]:fill-sky-400"
                                >
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        viewBox="0 0 24 24"
                                        class="transition-colors duration-300"
                                    >
                                        <path d="M12.026 2c-5.509 0-9.974 4.465-9.974 9.974 0 4.406 2.857 8.145 6.821 9.465.499.09.679-.217.679-.481 0-.237-.008-.865-.011-1.696-2.775.602-3.361-1.338-3.361-1.338-.452-1.152-1.107-1.459-1.107-1.459-.905-.619.069-.605.069-.605 1.002.07 1.527 1.028 1.527 1.028.89 1.524 2.336 1.084 2.902.829.091-.645.351-1.085.635-1.334-2.214-.251-4.542-1.107-4.542-4.93 0-1.087.389-1.979 1.024-2.675-.101-.253-.446-1.268.099-2.64 0 0 .837-.269 2.742 1.021a9.582 9.582 0 0 1 2.496-.336 9.554 9.554 0 0 1 2.496.336c1.906-1.291 2.742-1.021 2.742-1.021.545 1.372.203 2.387.099 2.64.64.696 1.024 1.587 1.024 2.675 0 3.833-2.33 4.675-4.552 4.922.355.308.675.916.675 1.846 0 1.334-.012 2.41-.012 2.737 0 .267.178.577.687.479C19.146 20.115 22 16.379 22 11.974 22 6.465 17.535 2 12.026 2z" />
                                    </svg>
                                </a>
                            </div>
                        </div>

                        <p class="font-calibre text-slate-400">{description}</p>

                        <div class="flex flex-wrap justify-between gap-3">
                            {technologies.map(technology => (
                                <p class="font-sfmono rounded-sm bg-slate-600 px-2 py-1.5 text-xs font-semibold text-slate-400">
                                    {technology}
                                </p>
                            ))}
                        </div>
                    </div>

                    <a
                        href={`${repository}#readme`}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="font-sfmono mx-auto mt-16 rounded border-[1px] border-sky-400 p-3 text-xs text-sky-400 transition-colors duration-300 hover:bg-sky-900 sm:mt-0"
                    >
                        Leer m√°s
                    </a>
                </div>
            ))
        }
    </article>
</Section>
